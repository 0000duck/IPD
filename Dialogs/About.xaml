<Window x:Class="IPD.Dialogs.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPD.Dialogs"
        mc:Ignorable="d"
        Title="关于" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Label Content="关于本软件" HorizontalAlignment="Center" FontSize="24" />
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Text="NexDroid PC Debugger" Margin="0,50,0,0" />
        </Grid>
        <Label Content="{Binding Version}" />
    </Grid>
</Window>